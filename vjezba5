<?php
$naslov = "Pogodi broj";
$uneseniBroj = isset($_GET['broj']) ? $_GET['broj'] : '';
$poruka = '';

if ($uneseniBroj !== '') {
    $zamisljenBroj = rand(1, 9);

    if ($uneseniBroj == $zamisljenBroj) {
        $poruka = " Bravo! Pogodili ste broj $zamisljenBroj.";
    } else {
        $poruka = "Niste pogodili. ZamiÅ¡ljeni broj je bio $zamisljenBroj.";
    }
}
?>
<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <title><?php echo $naslov; ?></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        :root {
            --bg: #0f172a;
            --card: #ffffff;
            --text: #0f172a;
            --muted: #64748b;
            --accent: #3b82f6;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            min-height: 100vh;
            background: radial-gradient(circle at top, #0f172a, #020617);
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .wrap {
            max-width: 400px;
            width: 100%;
            background: var(--card);
            padding: 32px;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0,0,0,.25);
            text-align: center;
        }

        h1 {
            margin-top: 0;
            margin-bottom: 16px;
        }

        input {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            margin-bottom: 16px;
        }

        button {
            padding: 10px 16px;
            border: 1px solid var(--accent);
            border-radius: 10px;
            background: transparent;
            color: var(--accent);
            cursor: pointer;
        }

        button:hover {
            background: var(--accent);
            color: #fff;
        }

        .result {
            margin-top: 16px;
            font-weight: bold;
        }

        .hint {
            font-size: 0.9rem;
            color: var(--muted);
            margin-bottom: 12px;
        }
    </style>
</head>
<body>

    <div class="wrap">
        <h1><?php echo $naslov; ?></h1>

        <p class="hint">Unesite broj od 1 do 9</p>

        <form method="get">
            <input
                type="number"
                name="broj"
                min="1"
                max="9"
                value="<?php echo $uneseniBroj; ?>"
                required
            >
            <button type="submit">Pogodi</button>
        </form>

        <?php if ($poruka !== ''): ?>
            <div class="result">
                <?php echo $poruka; ?>
            </div>
        <?php endif; ?>
    </div>

</body>
</html>
