            <label for="car">Lista vozila:</label>
            <select name="car" id="car" required>
                <option value="">--Odaberite vozilo--</option>
                <?php
                
                foreach ($cars as $car) {
                  
                    $selected = ($car == $selectedCar) ? "selected" : "";
                    echo "<option value='$car' $selected>$car</option>";
                }
                ?>
            </select>
            <button type="submit" name="submit">Prika≈æi odabrano vozilo</button>
        </form>

        <?php
        if (!empty($selectedCar)) {
            echo "<div class='result'>Odabrano vozilo: $selectedCar</div>";
        }
        ?>
