<body>
    <div class="container">
        <h1>Prebroj riječi u rečenici</h1>

        <form method="post" action="">
            <textarea name="sentence" rows="4" placeholder="Unesite rečenicu..." required><?php if(isset($_POST['sentence'])) echo htmlspecialchars($_POST['sentence']); ?></textarea>
            <button type="submit" name="submit">Prebroji riječi</button>
        </form>

        <?php
        if (isset($_POST['submit'])) {
            $sentence = trim($_POST['sentence']);
            $wordCount = str_word_count($sentence);
            echo "<div class='result'>";
            echo "Unesena rečenica: <br><em>$sentence</em><br>";
            echo "Broj riječi: $wordCount";
            echo "</div>";
        }
        ?>
