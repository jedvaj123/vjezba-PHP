<?php
$naslov = "PHP dokument — vježba 1d";
$autor = "Tin Jedvaj";
$opis = "Ova vježba demonstrira korištenje GET forme, odabir teme i prikaz slike.";

$tema = isset($_GET['tema']) ? $_GET['tema'] : 'dark';
$slika = isset($_GET['slika']) ? $_GET['slika'] : 'php';
$prikaziOpis = isset($_GET['opis']);

if ($tema !== 'light') {
    $tema = 'dark';
}

$dozvoljeneSlike = ['php', 'server', 'code'];
if (!in_array($slika, $dozvoljeneSlike)) {
    $slika = 'php';
}

$putanjaSlike = 'img/' . $slika . '.png';
?>
<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <title><?php echo $naslov; ?></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        :root {
            --bg-dark: #0f172a;
            --bg-light: #f1f5f9;
            --card-dark: #ffffff;
            --card-light: #ffffff;
            --text-dark: #0f172a;
            --text-light: #0f172a;
            --accent: #3b82f6;
            --muted: #64748b;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, sans-serif;
            font-size: 16px;
            background: <?php echo ($tema === 'light') ? 'var(--bg-light)' : 'radial-gradient(circle at top, #0f172a, #020617)'; ?>;
            color: var(--text-dark);
        }

        .wrap {
            max-width: 720px;
            margin: 48px auto;
            background: var(--card-dark);
            padding: 32px;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0,0,0,.15);
        }

        h1 {
            margin-top: 0;
            margin-bottom: 16px;
            font-size: 2rem;
        }

        p {
            margin-bottom: 16px;
            line-height: 1.6;
        }

        img {
            max-width: 120px;
            display: block;
            margin-bottom: 16px;
        }

        form {
            margin-top: 24px;
            margin-bottom: 24px;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        .btn {
            display: inline-block;
            padding: 10px 16px;
            border: 1px solid var(--accent);
            border-radius: 10px;
            text-decoration: none;
            background: transparent;
            color: var(--accent);
            cursor: pointer;
            margin-right: 8px;
        }

        .btn:hover {
            background: var(--accent);
            color: #ffffff;
        }

        footer {
            font-size: 0.9rem;
            color: var(--muted);
        }
    </style>
</head>
<body>

    <div class="wrap">
        <h1><?php echo $naslov; ?></h1>

        <p>Ovu stranicu izradio/la je <strong><?php echo $autor; ?></strong>.</p>

        <img src="<?php echo $putanjaSlike; ?>" alt="Odabrana slika">

        <?php if ($prikaziOpis): ?>
            <p><?php echo $opis; ?></p>
        <?php endif; ?>

        <form method="get">
            <fieldset>
                <legend><strong>Tema</strong></legend>
                <label>
                    <input type="radio" name="tema" value="dark" <?php if ($tema === 'dark') echo 'checked'; ?>>
                    Dark
                </label>
                <label>
                    <input type="radio" name="tema" value="light" <?php if ($tema === 'light') echo 'checked'; ?>>
                    Light
                </label>
            </fieldset>

            <fieldset>
                <legend><strong>Slika</strong></legend>
                <select name="slika">
                    <option value="php" <?php if ($slika === 'php') echo 'selected'; ?>>PHP</option>
                    <option value="server" <?php if ($slika === 'server') echo 'selected'; ?>>Server</option>
                    <option value="code" <?php if ($slika === 'code') echo 'selected'; ?>>Code</option>
                </select>
            </fieldset>

            <label>
                <input type="checkbox" name="opis" <?php if ($prikaziOpis) echo 'checked'; ?>>
                Prikaži opis
            </label>

            <br><br>

            <button type="submit" class="btn">Primijeni odabir</button>
            <a href="vjezba1c.php" class="btn">Natrag na vježba 1c</a>
        </form>

        <footer>
            © <?php echo date('Y'); ?> — Demo za PHP
        </footer>
    </div>

</body>
</html>

<!-- vjezba1d.php -->
